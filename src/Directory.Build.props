<Project>
	
	<!-- General -->
	<PropertyGroup>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IsPackable>true</IsPackable>
		<DebugType>embedded</DebugType>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<!-- Package meta -->
	<PropertyGroup>
		<Authors>rhythmagency</Authors>
		<Company>Rhythm</Company>
		<Copyright>Copyright Â© Rhythm 2024</Copyright>
		<PackageTags>aspnetcore io</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/rhythmagency/rhythm.io</PackageProjectUrl>
		<RepositoryUrl>https://github.com/rhythmagency/rhythm.io</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>

	<PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
	</PropertyGroup>
</Project>